<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="379dp"
        android:layout_height="79dp"
        android:background="@drawable/border_orange"
        android:elevation="4dp"
        android:padding="8dp"
        android:text="Elije la formula correcta para medir el area de un "
        android:textAlignment="center"
        android:textColor="#FFA500"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
     />

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="518dp"
        android:layout_height="539dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="w,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        android:background="@drawable/border_orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/camera_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewFormulaCorrect"
            android:layout_width="0dp"
            android:layout_height="172dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_orange"/>

        <TextView
            android:id="@+id/textViewFormulaIncorrect1"
            android:layout_width="0dp"
            android:layout_height="172dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_orange"/>

        <TextView
            android:id="@+id/textViewFormulaIncorrect2"
            android:layout_width="0dp"
            android:layout_height="172dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_orange"/>

    </LinearLayout>

    <!-- Otras vistas aquÃ­ -->

</androidx.constraintlayout.widget.ConstraintLayout>
