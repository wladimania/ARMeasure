<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="120dp">

        <TextView
            android:id="@+id/tvRegistroTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Registro de Usuario"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rounded"
            android:hint="Nombre"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/bottom_sheet_text_color"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rounded"
            android:hint="Correo electrónico"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/bottom_sheet_text_color"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/editTextContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rounded"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/bottom_sheet_text_color"
            android:theme="@style/EditTextTheme" />

        <RadioGroup
            android:id="@+id/radioGroupTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonAlumno"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:text="Alumno"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/radioButtonDocente"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:text="Docente"
                android:textColor="@android:color/black" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:padding="16dp"
            android:text="Registrarse"
            android:textColor="@color/bottom_sheet_text_color"
            android:textSize="16sp"
            android:theme="@style/ButtonTheme" />
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            style="@style/BotonVolver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
